@model MI.Application.Dto.LoginDto
@{
    Layout = null;
    ViewBag.Title = " 行政管理系统";
}
<!DOCTYPE html>
<html>
<head>
    @*<title>登录-行政OA</title>
    <link href="~/Css/Bootstrap3.3.5/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Css/Style.css" rel="stylesheet" />
    <link href="~/Css/Responsive.css" rel="stylesheet" />
    <script src="~/Scripts/Bootstrap3.3.5/js/bootstrap.min.js"></script>*@
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/ResponsiveStyle")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body style="width: 100%;background-color: #337AB7; ">
    <div class="loginbg">
        <div class="loginbox">
            <h1 class="titleh1">行政OA管理系统</h1>
            <h2 class="denglutext">登&nbsp;录</h2>
            <form action="/Login/Login" class="form-horizontal" method="post" role="form">
                <div class="form-group">
                    @Html.LabelFor(m=>m.AccountName,new { @class = "col-md-2 control-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m=>m.AccountName, new { @class = "form-control", @placeholder = "用户名", maxLength = 10 })
                        <p class="text-tips">@Html.ValidationMessageFor(m => m.AccountName)</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Password,new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m=>m.Password, new { @class = "form-control", @placeholder = "密码", maxLength = 10 })
                        <p class="text-tips">@Html.ValidationMessageFor(m => m.Password) </p>
                        <p class="text-tips">@Html.ValidationMessage("error") </p>
                    </div>
                </div>
              
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        
                        <input class="btn btn-default " type="submit" style="width: 120px;" value="登&nbsp;录">
                    </div>
                </div>
            </form>
        </div> <!-- loginbox-->
    </div>
    <div class="loginbgimg"></div>
    <!-- script-->
    <script src="js/JavaScript.js"></script>
</body>
</html>